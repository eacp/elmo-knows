{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".gitignore",
      ".firebaserc"
    ],

    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|ico)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=86400"
        } ]
      },
      {
        "source": "*",
        "headers": [{
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }]
      }
    ]
  }
}
